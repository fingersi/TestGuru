<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= render 'shared/nav'%>

  <body>
    <div class="container">
      <%= yield %>
    </div>
      <script>
        var language = "<%= I18n.locale %>";
        I18n.translations = <%== I18n::JS.filtered_translations.to_json %>;
      </script>
  </body>
  <br>
  <footer>
    <p><%= t('footer.part1') %> </p>
    <p><%= t('footer.part2', github: github_url('fingersi')).html_safe  %>
    <p><%= t('footer.part3', href: (link_to 'Thinknetica', "https://thinknetica.com/")).html_safe %> </p>
    <p>Copyright <%= current_year %></p>
  <footer>


</html>
