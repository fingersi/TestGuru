<h1>Question id: <%= params[:id] %> </h1>
<p>
  <label for='question-body'>Body</label>
  <p><%= @question.body %></p>
  <label for='question-answers'>Answers</label>
  <table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Correct</th>
      <th colspan="3"></th>
    </tr>
    <%= button_to "delete", {:controller => :questions, :action => 'destroy', :id => @question.id }, :method => :delete %>
  </thead>

  <tbody>
    <% @question.answers.each do |question| %>
      <tr>
        <td><%= question.value %></td>
        <td><%= question.correct %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</p>