
<h1><%= t('.title') %></h1>
<div>
<table class="table table-borderless">
  <tr>
    <th class="sort-by-title"><%= t('.test_tile')%>
      <%= octicon 'arrow-up', class: 'arrow-up hide'%>
      <%= octicon 'arrow-down', class: 'arrow-down hide'%>
    </th>
    <th><%= t('.actions')%></th>
  </tr>
  <tbody>
    <% @tests.each do |test| %>
        <tr class="col-12 col-md-4 content">
          <td><%= test.title %></td>
          <td><%= link_to t('start'), start_test_path(test), method: :post, class: "btn btn-light" %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>



