<% if resource.present? && resource.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> Error:</h2>

        <ul>
          <% resource.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
<% end %>