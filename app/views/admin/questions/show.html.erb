<h1><%= t('.title') %> <%= params[:id] %> </h1>

<p> <%= link_to @question.test.title, admin_test_path(@question.test) %></p>

<p>
  <label for='question-body'><%= t('.body') %></label>
  <p><%= @question.body %></p>
  <p><%= link_to t('destroy'), admin_question_path(@question), :method => :delete %> </p>
  <p><%= link_to t('edit'), edit_admin_question_path(@question) %> </p>
  <label for='question-answers'> <%= t('.answers') %></label>
  <p><%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %> </p>
  <table>
    <thead>
      <tr>
        <th><%= t('.answer') %></th>
        <th><%= t('.correct') %></th>
      </tr>
    </thead>
    <tbody>
    <%= render @question.answers%>
    </tbody>
  </table>
</p>