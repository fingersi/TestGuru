
<h1><%= t('.title') %></h1>

<%= link_to t('.new_test'), new_admin_test_path, class: "link-secondary" %>

<table class="table table-borderless">
  <tbody>
    <% @tests.each do |test| %>
      <tr class="col-12 col-md-4 content">
        <td vertical-align="middle"><%= test.title %>  </td>
        <td><%= link_to t('show'), admin_test_path(test), class: "btn btn-light" %></td>
        <td><%= link_to t('edit'), edit_admin_test_path(test), class: "btn btn-light" %></td>
        <td><%= link_to t('destroy'), admin_test_path(test), class: "btn btn-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


