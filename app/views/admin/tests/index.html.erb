
<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= link_to t('show'), admin_test_path(test) %></td>
        <td><%= link_to t('edit'), edit_admin_test_path(test) %></td>
        <td><%= link_to t('destroy'), admin_test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_test'), new_admin_test_path %>
